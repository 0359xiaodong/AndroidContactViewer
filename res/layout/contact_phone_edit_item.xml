<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

    <EditText android:id="@+id/contact_edit_phone_edit_text"
              android:layout_width="175dp"
              android:layout_height="wrap_content"
              android:layout_margin="4dp"
              android:text="@string/phone" />

    <ImageButton
            android:id="@+id/contact_edit_call_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/call_number"
            android:scaleType="fitCenter"
            android:background="@drawable/blank"
            android:src="@drawable/phone" />

    <ImageButton
            android:id="@+id/contact_edit_txt_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/contact_edit_call_action"
            android:contentDescription="@string/text_number"
            android:scaleType="fitCenter"
            android:background="@drawable/blank"
            android:src="@drawable/texting" />

    <View
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:background="@color/divider"
            android:layout_alignParentBottom="true" />


</RelativeLayout>